<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".muzeler_detay">

    <TextView
        android:id="@+id/museumNameText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_vertical"
        android:text="Museum Name"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/museumAddressText"
        app:layout_constraintEnd_toEndOf="@+id/museumAddressText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/museumAddressText"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMuseum"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageViewMuseum"
        android:layout_width="336dp"
        android:layout_height="171dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/museumNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/museumAddressText"
        android:layout_width="319dp"
        android:layout_height="0dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="186dp"
        android:gravity="center_vertical"
        android:text="Museum Address"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/museumNameText"
        tools:ignore="RtlCompat" />
</androidx.constraintlayout.widget.ConstraintLayout>