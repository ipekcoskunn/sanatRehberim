<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recyclerview_row_useremail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="7dp"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:textColor="#010827"
        android:text="useremail text" />

    <ImageView
        android:id="@+id/recyclerview_row_imageview"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/recyclerview_row_oyunadi_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="4dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3E0101"
        android:text="oyunadi text" />

    <TextView
        android:id="@+id/recyclerview_row_kurumadi_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#D73E0101"
        android:text="kurumadi text" />

    <TextView
        android:id="@+id/recyclerview_row_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textStyle="bold"
        android:paddingBottom="7dp"
        android:textSize="15sp"
        android:textColor="#D73E0101"
        android:text="comment text"/>


    <View
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark" />
</LinearLayout>